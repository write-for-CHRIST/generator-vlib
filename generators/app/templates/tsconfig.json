{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["dom", "es2015", "esnext"],
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./build"
  },
  "exclude": ["src/*.test.ts"],
  "include": ["src/*.ts"],
  "parcelTsPluginOptions": {}
}
